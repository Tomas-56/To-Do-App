<UserControl x:Class="ToDoWPF.View.AddTaskPopUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToDoWPF.View"
             mc:Ignorable="d" 
             Height="200" Width="400">

    <Grid Background="{StaticResource whiteAmber-Background-Brush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition ></RowDefinition>
            
        </Grid.RowDefinitions>

        <StackPanel  Grid.Row="0" Orientation="Horizontal">
            <TextBox  Width="200" Background="Transparent" FontSize="16" VerticalContentAlignment="Center"
                      FontFamily="{StaticResource FontFromDictionary}" BorderBrush="{StaticResource brown-Background-Brush}"
                      ></TextBox>
            <Border   Width="200" Grid.Row="1" BorderThickness="1" BorderBrush="{StaticResource brown-Background-Brush}">
                
                <Button  Height="40" Width="50" Foreground="{StaticResource darkBrown-Text-Brush}" Content="OK" Style="{StaticResource ButtonStyle1}">
                    
                </Button>
                
            </Border>
        </StackPanel>

        <TextBox Grid.Row="1" Width="400" HorizontalAlignment="Left" FontSize="16" 
                 TextWrapping="Wrap" Background="Transparent" 
                 FontFamily="{StaticResource FontFromDictionary}" 
                 BorderBrush="{StaticResource brown-Background-Brush}">
            
        </TextBox>


        
    </Grid>
</UserControl>
